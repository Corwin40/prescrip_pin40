{% extends 'base.html.twig' %}

{% block title %}Liste des bénéficiaires{% endblock %}

{% block body %}
    <div class="container mt-5">

        {# Bouton de retour au tableau de bord #}
        <div class="mb-4">
            {% include 'composants/forms/button_return_dashboard.html.twig' %}
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">Liste des bénéficiaires</h1>

            {% include 'composants/forms/button_creatnew.html.twig' with {
                label: 'Créer un nouveau bénéficiaire',
                href: path('app_gestapp_beneficiary_new')
            } %}
        </div>

        {# Formulaire de recherche #}
        <form method="get" action="{{ path('app_gestapp_beneficiary_index') }}" class="mb-4">
            <div class="row g-2">
                <div class="col-md-4">
                    <input type="text" name="search" class="form-control"
                           placeholder="Rechercher par nom, prénom ou civilité"
                           value="{{ search }}">
                </div>

                <div class="col-md-2">
                    <button class="btn btn-primary w-100">Filtrer</button>
                </div>
            </div>
        </form>

        {% if pagination is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle">
                    <thead class="table-dark">
                    <tr>
                        <th>Prénom</th>
                        <th>Genre</th>
                        <th>Tranche d’âge</th>
                        <th>Situation professionnelle</th>
                        <th>Créé le</th>
                        <th>Modifié le</th>
                        <th>Actions</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for beneficiary in pagination %}
                        <tr>
                            <td>{{ beneficiary.civility }} {{ beneficiary.firstname }} {{ beneficiary.lastname }}</td>
                            <td>{{ beneficiary.gender }}</td>
                            <td>{{ beneficiary.ageGroup }}</td>
                            <td>{{ beneficiary.professionnalStatus }}</td>
                            <td>{{ beneficiary.createdAt ? beneficiary.createdAt|date('d/m/Y') : '' }}</td>
                            <td>{{ beneficiary.updatedAt ? beneficiary.updatedAt|date('d/m/Y') : '' }}</td>
                            <td class="text-center">

                                {% include 'composants/forms/button_link.html.twig' with {
                                    label: 'Voir',
                                    href: path('app_gestapp_beneficiary_show', {'id': beneficiary.id}),
                                    type: 'info'
                                } %}

                                {% include 'composants/forms/button_link.html.twig' with {
                                    label: 'Modifier',
                                    href: path('app_gestapp_beneficiary_edit', {'id': beneficiary.id}),
                                    type: 'warning'
                                } %}

                                {% include 'composants/forms/buttons_delete.html.twig' with {
                                    id: beneficiary.id,
                                    route: 'app_gestapp_beneficiary_delete'
                                } %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Pagination #}
            <div class="mt-3">
                {{ knp_pagination_render(pagination) }}
            </div>

        {% else %}
            <p class="text-center">Aucun bénéficiaire trouvé.</p>
        {% endif %}
    </div>
{% endblock %}

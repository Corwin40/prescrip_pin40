{{ form_start(form) }}

<div class="row">

    <div class="col-md-2">
        {% include 'composants/inputs/input_select.html.twig' with {
            label: 'Civilité',
            field: form.civility
        } %}
    </div>

    <div class="col-md-4">
        {% include 'composants/inputs/input_text.html.twig' with {
            label: 'Prénom',
            field: form.firstname
        } %}
    </div>

    <div class="col-md-4">
        {% include 'composants/inputs/input_text.html.twig' with {
            label: 'Nom',
            field: form.lastname
        } %}
    </div>


    <div class="col-md-12">
        {% include 'composants/inputs/input_radio_horizontal.html.twig' with {
            form_label: 'Age',
            form_field: form.ageGroup
        } %}
    </div>

    <div class="col-md-10"></div>

    <div class="col-md-12">
        {% include 'composants/inputs/input_radio_horizontal.html.twig' with {
            form_label: 'Situation',
            form_field: form.professionnalStatus
        } %}
    </div>

</div>
{% if app.request.attributes.get('_route') == 'app_gestapp_beneficiary_new' or app.request.attributes.get('_route') == 'app_gestapp_beneficiary_edit'%}
    <div class="mt-4">
        <a class="btn btn-secondary" href="{{ path('app_admin_dashboard_index') }}">Retour</a>
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>
{% endif %}


{{ form_end(form) }}

{{ form_start(form) }}

<div class="row g-3">

    <div class="col-md-2">
        {% include 'composants/inputs/input_select.html.twig' with {
            label: 'Civilité',
            field: form.civility
        } %}
    </div>

    <div class="col-md-4">
        {% include 'composants/inputs/input_text.html.twig' with {
            label: 'Prénom',
            field: form.firstname
        } %}
    </div>

    <div class="col-md-4">
        {% include 'composants/inputs/input_text.html.twig' with {
            label: 'Nom',
            field: form.lastname
        } %}
    </div>

    <div class="col-md-2">
        {% include 'composants/inputs/input_select.html.twig' with {
            label: 'Genre',
            field: form.gender
        } %}
    </div>

    <div class="col-md-12">
        {% include 'composants/inputs/input_radios.html.twig' with {
          field: form.ageGroup
        } %}
    </div>

    <div class="col-md-10"></div>

    <div class="col-md-12">
        {% include 'composants/inputs/input_radios.html.twig' with {
            field: form.professionnalStatus
        } %}
    </div>


</div>
{% if app.request.attributes.get('_route') == 'app_gestapp_beneficiary_new' or app.request.attributes.get('_route') == 'app_gestapp_beneficiary_edit'%}
    <div class="mt-4">
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>
{% endif %}


{{ form_end(form) }}

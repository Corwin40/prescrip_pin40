{% extends 'base.html.twig' %}

{% block title %}Beneficiary Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Beneficiary Details</h1>

        <div class="card shadow-lg">
            <div class="card-body">
                <table class="table table-bordered table-striped align-middle">
                    <tbody>
                        <tr>
                            <th scope="row" class="table-dark w-25">Id</th>
                            <td>{{ beneficiary.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="table-dark w-25">Firstname</th>
                            <td>{{ beneficiary.firstname }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="table-dark w-25">Lastname</th>
                            <td>{{ beneficiary.lastname }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="table-dark w-25">Civility</th>
                            <td>{{ beneficiary.civility }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="table-dark w-25">Gender</th>
                            <td>{{ beneficiary.gender }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="table-dark w-25">Age Group</th>
                            <td>{{ beneficiary.ageGroup }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="table-dark w-25">Professional Status</th>
                            <td>{{ beneficiary.professionnalStatus }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="table-dark w-25">Created At</th>
                            <td>{{ beneficiary.createdAt ? beneficiary.createdAt|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="table-dark w-25">Updated At</th>
                            <td>{{ beneficiary.updatedAt ? beneficiary.updatedAt|date('Y-m-d') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Boutons centrÃ©s -->
        <div class="text-center mt-4">
            <!-- Back -->
            <a href="{{ path('app_gestapp_beneficiary_index') }}" class="btn btn-primary btn-lg mx-2">
                <i class="bi bi-arrow-left"></i> Back to list
            </a>

            <!-- Edit -->
            <a href="{{ path('app_gestapp_beneficiary_edit', {'id': beneficiary.id}) }}" class="btn btn-success btn-lg mx-2">
                <i class="bi bi-pencil-square"></i> Edit
            </a>

            <!-- Delete -->
            <form method="post" action="{{ path('app_gestapp_beneficiary_delete', {'id': beneficiary.id}) }}"
                  onsubmit="return confirm('Are you sure you want to delete this item?');"
                  class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ beneficiary.id) }}">
                <button type="submit" class="btn btn-danger btn-lg mx-2">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Nouvelle prescription{% endblock %}

{% block body %}

    {% set role = 'aucun' %}
    {% if app.user.roles|first == 'ROLE_SUPER_ADMIN' or app.user.roles|first == 'ROLE_ADMIN' %}
        {% set role = 'Administrateur' %}
    {% elseif app.user.roles|first == 'ROLE_MEDIATEUR' %}
        {% set role = 'Médiateur' %}
    {% elseif app.user.roles|first == 'ROLE_PRESCRIPTEUR' %}
        {% set role = 'Prescripteur' %}
    {% endif %}

    <div class="container mt-5">
        <div class="row mb-4">
            <div class="col-md-12">
                <h1 class="mb-0">Ouvrir une nouvelle prescription</h1>
                <p class="mb-0 text-secondary">Référence : {{ prescription.ref }}</p>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-md-12">
                {% if prescription.isOpenByPrescriptor == 1 and prescription.isOpenByMediator == 0 %}
                    <p>Ce dossier est ouvert par : {{ prescription.membre.nameStructure }}</p>
                {% endif %}
                {% if prescription.isOpenByPrescriptor == 0 and prescription.isOpenByMediator == 1 %}
                    <p>Ce dossier est ouvert par : {{ prescription.lieuMediation.nameStructure }}</p>
                {% endif %}
            </div>
        </div>
        {{ include('gestapp/prescription/_form.html.twig') }}
    </div>
{% endblock %}

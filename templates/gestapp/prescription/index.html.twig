{% extends 'base.html.twig' %}

{% block title %}Liste des prescriptions{% endblock %}

{% block body %}
    <div class="container mt-5">

        {# Bouton de retour #}
        <div class="mb-4">
            {% include 'composants/forms/button_return_dashboard.html.twig' %}
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">Liste des prescriptions</h1>

            {% include 'composants/forms/button_creatnew.html.twig' with {
                label: 'Créer une prescription',
                href: path('app_gestapp_prescription_new')
            } %}
        </div>

        {# --- FILTRE --- #}
        <form method="get" action="{{ path('app_gestapp_prescription_index') }}" class="mb-4">
            <div class="row g-2">

                <div class="col-md-4">
                    <input
                        type="text"
                        name="search"
                        class="form-control"
                        placeholder="Rechercher par référence"
                        value="{{ search }}"
                    >
                </div>

                <div class="col-md-2">
                    <button class="btn btn-primary w-100">Rechercher</button>
                </div>

            </div>
        </form>

        {% if pagination is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle">
                    <thead class="table-dark">
                    <tr>
                        <th>Référence</th>
                        <th>Créé le</th>
                        <th>Modifié le</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for prescription in pagination %}
                        <tr>
                            <td>{{ prescription.ref }}</td>
                            <td>{{ prescription.createdAt ? prescription.createdAt|date('d/m/Y') : '' }}</td>
                            <td>{{ prescription.updatedAt ? prescription.updatedAt|date('d/m/Y') : '' }}</td>
                            <td class="text-center">

                                {# Voir #}
                                {% include 'composants/forms/button_link.html.twig' with {
                                    label: 'Voir',
                                    href: path('app_gestapp_prescription_show', {'id': prescription.id}),
                                    type: 'info'
                                } %}

                                {# Modifier #}
                                {% include 'composants/forms/button_link.html.twig' with {
                                    label: 'Modifier',
                                    href: path('app_gestapp_prescription_edit', {'id': prescription.id}),
                                    type: 'warning'
                                } %}

                                {# Supprimer #}
                                {% include 'composants/forms/buttons_delete.html.twig' with {
                                    id: prescription.id,
                                    route: 'app_gestapp_prescription_delete'
                                } %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            {# PAGINATION #}
            <div class="mt-3">
                {{ knp_pagination_render(pagination) }}
            </div>

        {% else %}
            <p class="text-center">Aucune prescription trouvée.</p>
        {% endif %}
    </div>
{% endblock %}

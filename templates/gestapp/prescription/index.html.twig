{% extends 'base.html.twig' %}

{% block title %}prescription index{% endblock %}

{% block body %}
    <h1>prescription index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Ref</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prescription in prescriptions %}
            <tr>
                <td>{{ prescription.id }}</td>
                <td>{{ prescription.createdAt ? prescription.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ prescription.updatedAt ? prescription.updatedAt|date('Y-m-d') : '' }}</td>
                <td>{{ prescription.ref }}</td>
                <td>
                    <a href="{{ path('app_gestapp_prescription_show', {'id': prescription.id}) }}">show</a>
                    <a href="{{ path('app_gestapp_prescription_edit', {'id': prescription.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gestapp_prescription_new') }}">Create new</a>
{% endblock %}

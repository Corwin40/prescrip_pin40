{% extends 'base.html.twig' %}

{% block title %}Détails de la prescription{% endblock %}

{% block body %}
    <div class="container mt-5">

        {# Bouton de retour au tableau de bord #}
        <div class="mb-4">
            {% include 'composants/forms/button_return_dashboard.html.twig' %}
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">Détails de la prescription</h1>
        </div>

        <div class="card p-4 shadow-sm">
            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <tbody>
                    <tr>
                        <th scope="row" style="width: 30%;">Référence</th>
                        <td>{{ prescription.ref }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Date de création</th>
                        <td>{{ prescription.createdAt ? prescription.createdAt|date('d/m/Y') : '' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Dernière modification</th>
                        <td>{{ prescription.updatedAt ? prescription.updatedAt|date('d/m/Y') : '' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4 d-flex flex-wrap gap-2">
            {% include 'composants/showsTable/button_return_list.html.twig' with {
                href: path('app_gestapp_prescription_index'),
                label: 'Retour à la liste'
            } %}

            {% include 'composants/showsTable/button_update.html.twig' with {
                href: path('app_gestapp_prescription_edit', {'id': prescription.id}),
                label: 'Modifier'
            } %}

            {% include 'composants/showsTable/buttons_delete.html.twig' with {
                id: prescription.id,
                route: 'app_gestapp_prescription_delete'
            } %}
        </div>
    </div>
{% endblock %}

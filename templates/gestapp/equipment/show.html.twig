{% extends 'base.html.twig' %}

{% block title %}Détails de l’équipement{% endblock %}

{% block body %}
    <div class="container mt-5">

        {# Bouton de retour au tableau de bord #}
        <div class="mb-4">
            {% include 'composants/forms/button_return_dashboard.html.twig' %}
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">Détails de l’équipement</h1>
        </div>

        <div class="card shadow-sm p-4">
            <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle">
                    <tbody>
                    <tr>
                        <th>Type</th>
                        <td>{{ equipment.typeEquipment }}</td>
                    </tr>
                    <tr>
                        <th>Marque</th>
                        <td>{{ equipment.brandEquipment }}</td>
                    </tr>
                    <tr>
                        <th>Matricule</th>
                        <td>{{ equipment.matriculEquipment }}</td>
                    </tr>
                    <tr>
                        <th>OS installé</th>
                        <td>{{ equipment.osInstalled }}</td>
                    </tr>
                    <tr>
                        <th>Statut</th>
                        <td>{{ equipment.statusEquipment }}</td>
                    </tr>
                    <tr>
                        <th>Disponible</th>
                        <td>
                            {% if equipment.isDispo %}
                                <span class="badge bg-success">Oui</span>
                            {% else %}
                                <span class="badge bg-danger">Non</span>
                            {% endif %}
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4 d-flex flex-wrap gap-2">
            {% include 'composants/showsTable/button_return_list.html.twig' with {
                href: path('app_gestapp_equipment_index'),
                label: 'Retour à la liste'
            } %}

            {% include 'composants/forms/button_link.html.twig' with {
                label: 'Modifier',
                href: path('app_gestapp_equipment_edit', {'id': equipment.id}),
                type: 'warning'
            } %}

            {% include 'composants/showsTable/buttons_delete.html.twig' with {
                id: equipment.id,
                route: 'app_gestapp_equipment_delete'
            } %}
        </div>

    </div>
{% endblock %}

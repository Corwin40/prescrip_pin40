{% extends 'base.html.twig' %}

{% block title %}Equipment index{% endblock %}

{% block body %}
    <h1>Equipment index</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Brand</th>
                <th>Matricule</th>
                <th>OS Installed</th>
                <th>Status</th>
                <th>Disponible</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipment in equipment %}
            <tr>
                <td>{{ equipment.id }}</td>
                <td>{{ equipment.typeEquipment }}</td>
                <td>{{ equipment.brandEquipment }}</td>
                <td>{{ equipment.matriculEquipment }}</td>
                <td>{{ equipment.osInstalled }}</td>
                <td>{{ equipment.statusEquipment }}</td>
                <td>{{ equipment.isDispo ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_gestapp_equipment_show', {'id': equipment.id}) }}">show</a>
                    <a href="{{ path('app_gestapp_equipment_edit', {'id': equipment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gestapp_equipment_new') }}">Create new</a>
{% endblock %}

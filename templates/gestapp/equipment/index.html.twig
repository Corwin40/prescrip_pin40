{% extends 'base.html.twig' %}

{% block title %}Liste des équipements{% endblock %}

{% block body %}
    <div class="container mt-5">

        <div class="mb-4">
            {% include 'composants/forms/button_return_dashboard.html.twig' %}
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">Liste des équipements</h1>

            {% include 'composants/forms/button_creatnew.html.twig' with {
                label: 'Ajouter un équipement',
                href: path('app_gestapp_equipment_new')
            } %}
        </div>

        {# FORMULAIRE DE RECHERCHE + FILTRES #}
        <form method="get" action="{{ path('app_gestapp_equipment_index') }}" class="mb-4">
            <div class="row g-2">

                <div class="col-md-4">
                    <input type="text"
                           name="search"
                           class="form-control"
                           placeholder="Rechercher : type, marque, matricule"
                           value="{{ search }}">
                </div>

                <div class="col-md-3">
                    <select name="dispo" class="form-select">
                        <option value="all" {% if dispo is null or dispo == 'all' %}selected{% endif %}>Tous</option>
                        <option value="1" {% if dispo == '1' %}selected{% endif %}>Disponible</option>
                        <option value="0" {% if dispo == '0' %}selected{% endif %}>Non disponible</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <select name="statut" class="form-select">
                        <option value="all" {% if statut is null or statut == 'all' %}selected{% endif %}>Tous statuts</option>
                        {% for s in ['Neuf','Bon etat','satisfaisant'] %}
                            <option value="{{ s }}" {% if statut == s %}selected{% endif %}>{{ s }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="col-md-2">
                    <button class="btn btn-primary w-100">Filtrer</button>
                </div>

            </div>

            <div class="row g-2 mt-2">
                <div class="col-md-4">
                    <select name="tri" class="form-select">
                        <option value="e.typeEquipment" {% if tri == 'e.typeEquipment' %}selected{% endif %}>Trier par : Type</option>
                        <option value="e.brandEquipment" {% if tri == 'e.brandEquipment' %}selected{% endif %}>Marque</option>
                        <option value="e.matriculEquipment" {% if tri == 'e.matriculEquipment' %}selected{% endif %}>Matricule</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <select name="ordre" class="form-select">
                        <option value="ASC" {% if ordre == 'ASC' %}selected{% endif %}>Ordre croissant</option>
                        <option value="DESC" {% if ordre == 'DESC' %}selected{% endif %}>Ordre décroissant</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <button class="btn btn-secondary w-100">Trier</button>
                </div>
            </div>
        </form>

        {% if pagination is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle">
                    <thead class="table-dark">
                    <tr>
                        <th>Type</th>
                        <th>Marque</th>
                        <th>Matricule</th>
                        <th>OS installé</th>
                        <th>Statut</th>
                        <th>Disponible</th>
                        <th>Actions</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for item in pagination %}
                        <tr>
                            <td>{{ item.typeEquipment }}</td>
                            <td>{{ item.brandEquipment }}</td>
                            <td>{{ item.matriculEquipment }}</td>
                            <td>{{ item.osInstalled }}</td>
                            <td>{{ item.statusEquipment }}</td>
                            <td>
                                {% if item.isDispo %}
                                    <span class="badge bg-success">Oui</span>
                                {% else %}
                                    <span class="badge bg-danger">Non</span>
                                {% endif %}
                            </td>

                            <td class="text-center">
                                {% include 'composants/forms/button_link.html.twig' with {
                                    label: 'Voir',
                                    href: path('app_gestapp_equipment_show', {'id': item.id}),
                                    type: 'info'
                                } %}

                                {% include 'composants/forms/button_link.html.twig' with {
                                    label: 'Modifier',
                                    href: path('app_gestapp_equipment_edit', {'id': item.id}),
                                    type: 'warning'
                                } %}

                                {% include 'composants/forms/buttons_delete.html.twig' with {
                                    id: item.id,
                                    route: 'app_gestapp_equipment_delete'
                                } %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            {# PAGINATION #}
            <div class="mt-3">
                {{ knp_pagination_render(pagination) }}
            </div>

        {% else %}
            <p class="text-center">Aucun équipement trouvé.</p>
        {% endif %}
    </div>
{% endblock %}

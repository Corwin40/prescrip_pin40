{% extends 'base.html.twig' %}

{% block title %}Modifier un Équipement{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">✏️ Modifier l'Équipement</h3>
        </div>

        <div class="card-body">
            {{ include('gestapp/equipment/_form.html.twig') }}
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('app_gestapp_equipment_index') }}" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
            <div class="d-flex gap-2">
                <button type="submit" form="equipment_form" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Mettre à jour
                </button>
                <form method="post" action="{{ path('app_gestapp_equipment_delete', {'id': equipment.id}) }}" 
                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet équipement ?');" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipment.id) }}">
                    <button class="btn btn-danger">
                        <i class="bi bi-trash"></i> Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

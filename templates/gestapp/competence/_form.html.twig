{{ form_start(form) }}
<div class="row">
    <div class="col-12 bg-light border-bottom border-dark mb-2">
        <h3>Diagnostic des compétences numériques</h3>
    </div>
    <div class="col-12">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Compétences</th>
                <th>Acquis</th>
                <th>En cours</th>
                <th>Non acquis</th>
            </tr>
            {% include 'composants/inputs/input_radio_tablerow.html.twig' with {
                form_label: 'Les bases',
                form_field: form.compBase
            } %}
            {% include 'composants/inputs/input_radio_tablerow.html.twig' with {
                form_label: 'Texte et documents',
                form_field: form.compDesk
            } %}
            {% include 'composants/inputs/input_radio_tablerow.html.twig' with {
                form_label: 'Internet',
                form_field: form.compInternet
            } %}
            {% include 'composants/inputs/input_radio_tablerow.html.twig' with {
                form_label: 'Messagerie electronique',
                form_field: form.compEmail
            } %}
        </table>



    </div>
    <div class="row g-3">
        <div class="col-md-6">
            {% include 'composants/inputs/input_checkbox_switch.html.twig' with {
                form_field: form.isAutoEva
            } %}
        </div>
        <div class="col-md-6">
            {% include 'composants/inputs/input_checkbox_switch.html.twig' with {
                form_field: form.isAutoEvaEnd
            } %}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12 bg-light border-bottom border-dark mb-2">
        <h3>Les objectifs de la mediation</h3>
    </div>
    <div class="col-12 mb-2">
        <p class="mb-0">Compétences à travailler (référentiel DIGCOMP) : https//eduscol.education.fr/document/20392/download</p>
    </div>

   <div class="row">
       <div class="col-12 bg-light border-bottom border-dark mb-2">
           <h3>Les Objectifs de la mission</h3>
       </div>
       <div class="col-12">
           <table class="table table-bordered table-striped">
               <tbody>
               <tr>
                   <th>Compétences</th>
                   <th>Objectifs</th>
               </tr>
               <tr>
                   <td>0 ->Compétences materielles </td>
                   <td><input id="competence is DigComp0" type="checkbox" name="competence[isDigComp0]" value="0"></td>
               </tr>

               <tr>
                   <td>1 ->Information et données</td>
                   <td><input id="competence is DigComp1" type="checkbox" name="competence[isDigComp1]" value="0"></td>
               </tr>

               <tr>
                   <td>2 ->Communication et collaboration </td>
                   <td><input id="competence is DigComp2" type="checkbox" name="competence[isDigComp2]" value="0"></td>
               </tr>

               <tr>
                   <td>3 ->Création de contenus </td>
                   <td><input id="competence is DigComp3" type="checkbox" name="competence[isDigComp3]" value="0"></td>
               </tr>

               <tr>
                   <td>4 ->Protection et sécurité </td>
                   <td><input id="competence is DigComp4" type="checkbox" name="competence[isDigComp4]" value="0"></td>
               </tr>

               <tr>
                   <td>5 ->Environnement numérique </td>
                   <td><input id="competence is DigComp5" type="checkbox" name="competence[isDigComp5]" value="0"></td>
               </tr>

               </tbody>
           </table>
       </div>
   </div>






    <div class="col-md-12">
        {% include 'composants/inputs/input_aera.html.twig' with {
            label: 'A completer par le médiateur',
            field: form.detailParcour
        } %}
    </div>
</div>

{{ form_end(form) }}

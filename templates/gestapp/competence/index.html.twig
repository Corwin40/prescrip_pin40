{% extends 'base.html.twig' %}

{% block title %}Liste des comp√©tences{% endblock %}

{% block body %}
    <div class="container mt-5">

        <!-- üîô Bouton de retour au tableau de bord -->
        <div class="mb-4">
            {% include 'composants/forms/button_return_dashboard.html.twig' %}
        </div>

        <h1 class="text-center mb-4">Liste des comp√©tences</h1>

        {% if competences is not empty %}
            <div class="row g-4">
                {% for competence in competences %}
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card shadow-sm border-0 h-100">
                            <div class="card-body">
                                <h5 class="card-title fw-bold text-primary mb-3">
                                    {{ competence.beneficiary }}
                                </h5>

                                <div class="mb-2">
                                    <strong>Comp. base :</strong> {{ competence.compBase|capitalize }}
                                </div>
                                <div class="mb-2">
                                    <strong>Comp. desk :</strong> {{ competence.compDesk|capitalize }}
                                </div>
                                <div class="mb-2">
                                    <strong>Comp. internet :</strong> {{ competence.compInternet|capitalize }}
                                </div>
                                <div class="mb-2">
                                    <strong>Comp. email :</strong> {{ competence.compEmail|capitalize }}
                                </div>
                                <div class="mb-2">
                                    <strong>Auto-√©val. :</strong> {{ competence.isAutoEva ? 'Oui' : 'Non' }}
                                </div>
                                <div class="mb-3">
                                    <strong>Finale :</strong> {{ competence.isAutoEvalEnd ? 'Oui' : 'Non' }}
                                </div>

                                <div class="d-flex justify-content-between flex-wrap gap-2 mt-3">
                                    <!-- Bouton Voir -->
                                    <a href="{{ path('app_gestapp_competence_show', {'id': competence.id}) }}"
                                       class="btn btn-info btn-sm flex-fill text-white text-center">
                                        Voir
                                    </a>

                                    <!-- Bouton Modifier -->
                                    <a href="{{ path('app_gestapp_competence_edit', {'id': competence.id}) }}"
                                       class="btn btn-warning btn-sm flex-fill text-center">
                                        Modifier
                                    </a>

                                    <!-- Bouton Supprimer -->
                                    <form method="post"
                                          action="{{ path('app_gestapp_competence_delete', {'id': competence.id}) }}"
                                          class="flex-fill text-center"
                                          onsubmit="return confirm('Supprimer cette comp√©tence ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ competence.id) }}">
                                        <button class="btn btn-danger btn-sm w-100">Supprimer</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-secondary text-center">
                Aucune comp√©tence enregistr√©e.
            </div>
        {% endif %}
    </div>
{% endblock %}

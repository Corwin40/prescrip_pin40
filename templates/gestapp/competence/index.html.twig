{% extends 'base.html.twig' %}

{% block title %}Auto-évaluation des compétences{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Auto-évaluation des compétences</h1>

        {% if competences is not empty %}
            {% for competence in competences %}
                <div class="card shadow-sm mb-4">
                    <div class="card-body">

                        <!-- En-têtes -->
                        <div class="row fw-bold text-center border-bottom pb-2 mb-3">
                            <div class="col-6 text-start">Compétences</div>
                            <div class="col-2">Acquis</div>
                            <div class="col-2">En cours</div>
                            <div class="col-2">Non acquis</div>
                        </div>

                        <!-- Compétence : Bases -->
                        <div class="row text-center align-items-center py-2 border-bottom">
                            <div class="col-6 text-start">Comp-bases</div>
                            <div class="col-2">{% if competence.compBase == 'acquis' %}✔{% endif %}</div>
                            <div class="col-2">{% if competence.compBase == 'en_cours' %}✔{% endif %}</div>
                            <div class="col-2">{% if competence.compBase == 'non_acquis' %}✔{% endif %}</div>
                        </div>

                        <!-- Compétence : Desk -->
                        <div class="row text-center align-items-center py-2 border-bottom">
                            <div class="col-6 text-start">Comp-desk</div>
                            <div class="col-2">{% if competence.compDesk == 'acquis' %}✔{% endif %}</div>
                            <div class="col-2">{% if competence.compDesk == 'en_cours' %}✔{% endif %}</div>
                            <div class="col-2">{% if competence.compDesk == 'non_acquis' %}✔{% endif %}</div>
                        </div>

                        <!-- Compétence : Internet -->
                        <div class="row text-center align-items-center py-2 border-bottom">
                            <div class="col-6 text-start">Comp-internet</div>
                            <div class="col-2">{% if competence.compInternet == 'acquis' %}✔{% endif %}</div>
                            <div class="col-2">{% if competence.compInternet == 'en_cours' %}✔{% endif %}</div>
                            <div class="col-2">{% if competence.compInternet == 'non_acquis' %}✔{% endif %}</div>
                        </div>

                        <!-- Compétence : Email -->
                        <div class="row text-center align-items-center py-2 border-bottom">
                            <div class="col-6 text-start">Comp-email</div>
                            <div class="col-2">{% if competence.compEmail == 'acquis' %}✔{% endif %}</div>
                            <div class="col-2">{% if competence.compEmail == 'en_cours' %}✔{% endif %}</div>
                            <div class="col-2">{% if competence.compEmail == 'non_acquis' %}✔{% endif %}</div>
                        </div>

                        <!-- Détails -->
                        <div class="mt-3 p-3 bg-light rounded">
                            <p class="mb-1"><strong>Détails :</strong> {{ competence.detailParcour }}</p>
                            <p class="mb-1"><strong>Évaluation finale :</strong> {{ competence.isAutoEvalEnd ? 'Oui' : 'Non' }}</p>
                            <div class="d-flex flex-wrap gap-2 mt-2">
                                <a href="{{ path('app_gestapp_competence_show', {'id': competence.id}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                                <a href="{{ path('app_gestapp_competence_edit', {'id': competence.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="alert alert-secondary text-center">
                Aucune compétence enregistrée.
            </div>
        {% endif %}

        <div class="text-center mt-3">
            <a href="{{ path('app_gestapp_competence_new') }}" class="btn btn-primary">Ajouter une compétence</a>
        </div>
    </div>
{% endblock %}

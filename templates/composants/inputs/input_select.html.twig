<!-- Input Select -->

<!-- Civilité & Genre -->
<div class="row">
    <!-- Civilité -->
    <div class="col-md-6">
        <label for="civility" class="form-label fw-semibold">Civilité</label>
        <select id="civility" name="civility" class="form-select" required>
            <option value="">-- Sélectionnez --</option>
            <option>Monsieur</option>
            <option>Madame</option>
            <option>Mademoiselle</option>
        </select>
    </div>

    <!-- Genre -->
    <div class="col-md-6">
        <label for="gender" class="form-label fw-semibold">Genre</label>
        <select id="gender" name="gender" class="form-select" required>
            <option value="">-- Sélectionnez --</option>
            <option>Homme</option>
            <option>Femme</option>
            <option>Extra terrestre</option>
            <option>Androïde</option>
            <option>Chat ou chiens</option>
        </select>
    </div>
</div>

<!-- Tranche d'âge & Statut professionnel -->
<div class="row">
    <!-- Tranche d'âge -->
    <div class="col-md-6">
        <label for="ageGroup" class="form-label fw-semibold">Tranche d'âge</label>
        <select id="ageGroup" name="ageGroup" class="form-select" required>
            <option value="">-- Sélectionnez --</option>
            <option>Moins de 18 ans</option>
            <option>18 - 24 ans</option>
            <option>25 - 34 ans</option>
            <option>35 - 44 ans</option>
            <option>45 - 54 ans</option>
            <option>55 - 64 ans</option>
            <option>65 ans et plus</option>
        </select>
    </div>

    <!-- Statut professionnel -->
    <div class="col-md-6">
        <label for="professionnalStatus" class="form-label fw-semibold">Statut professionnel</label>
        <select id="professionnalStatus" name="professionnalStatus" class="form-select" required>
            <option value="">-- Sélectionnez --</option>
            <option>Salarié</option>
            <option>Étudiant</option>
            <option>Demandeur d’emploi</option>
            <option>Travailleur indépendant</option>
            <option>Retraité</option>
            <option>Tranquile</option>
        </select>
    </div>
</div>

<!-- Système d'exploitation & Statut équipement -->
<div class="row">
    <!-- Système d'exploitation -->
    <div class="col-md-6">
        <label for="osInstalled" class="form-label fw-semibold">Système d’exploitation installé</label>
        <select id="osInstalled" name="osInstalled" class="form-select" required>
            <option value="">-- Sélectionnez un OS --</option>
            <option>Windows 11</option>
            <option>macOS</option>
            <option>Linux</option>
            <option>Android</option>
            <option>iOS</option>
        </select>
    </div>

    <!-- Statut de l’équipement -->
    <div class="col-md-6">
        <label for="statusEquipment" class="form-label fw-semibold">Statut de l’équipement</label>
        <select id="statusEquipment" name="statusEquipment" class="form-select" required>
            <option value="">-- Sélectionnez un statut --</option>
            <option>En service</option>
            <option>En maintenance</option>
            <option>Hors service</option>
        </select>
    </div>
</div>



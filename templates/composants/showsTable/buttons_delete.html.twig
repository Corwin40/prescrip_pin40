<form method="post" action="{{ path(route, {'id': id}) }}" style="display:inline;" onsubmit="return confirm('Confirmer la suppression ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">
    <button class="btn btn-danger">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>

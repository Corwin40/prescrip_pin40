                            alt="MÃ©diation"
                            style="width: 100px; height: 100px; object-fit: contain;"
                        >
                        <div class="card-body">
                            <h6 class="card-title">MÃ©diation</h6>
                            <a href="{{ path('app_gestapp_equipment_index') }}" class="btn btn-primary mt-2">Voir plus</a>
                        </div>
                    </div>
                </div>

                {#  afficher uniquement la carte Prescription #}
            {% elseif is_granted('ROLE_PRESCRIPTEUR') %}

{% block body %}
    <div class="container">
        <h2 class="text-center mb-4">Bienvenue sur votre tableau de bord</h2>

        <div class="row">
            <div class="col-9">
                <div class="card">
                    <div class="card-body">
                        <p class="lead">Machine disponibles</p>
                        <p class="h3">{{ equipments|length }}</p>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <a href="{{ path('app_admin_member_new',{'role':'prescripteur'}) }}" class="btn btn-outline-info">Ajouter un prescripteur</a>
                <a href="{{ path('app_admin_member_new',{'role':'mediateur'}) }}" class="btn btn-outline-info">Ajouter un mÃ©diateur</a>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <p>LISTE DES PRESCRITIONS</p>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>ref</th>
                            <th>Nom et PrÃ©nom</th>
                            <th>Structure</th>
                            <th>Espace</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for prescription in prescriptions %}
                            <tr>
                                <td></td>
                                <td>{{ prescription.ref }}</td>
                                <td>{{ prescription.beneficiaire.firstname }} {{ prescription.beneficiaire.lastname }}</td>
                                <td>{{ prescription.membre.nameStructure }}</td>
                                <td>{{ prescription.lieuMediation }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">Pour l'instant il n'y a pas de prescription</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot></tfoot>
                </table>

            </div>

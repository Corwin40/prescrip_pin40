                    <div class="card h-100 shadow-sm">
                        <img
                            src="{{ asset('assets/images/dashboard_prescription.jpg') }}"
                            class="card-img-top mx-auto d-block mt-3"
                            alt="Prescription"
                            style="width: 100px; height: 100px; object-fit: contain;"
                        >
                        <div class="card-body">
                            <h6 class="card-title">Prescription</h6>
                            <a href="{{ path('app_gestapp_prescription_index') }}" class="btn btn-primary mt-2">Voir plus</a>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

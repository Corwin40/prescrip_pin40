{% extends 'base.html.twig' %}

{% block title %}Modifier un membre{% endblock %}

{% block body %}
    <div class="container mt-5">

        <h1 class="mb-4">Modifier le membre</h1>

        <div class="card p-4 shadow-sm">
            {# Inclusion du formulaire principal #}
            {{ include('admin/member/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>

        <div class="mt-3 d-flex gap-2">
            {# Bouton retour (composant showsTable) #}
            {% include 'composants/showsTable/button_return_list.html.twig' with {
                href: path('app_admin_member_index'),
                label: 'Retour à la liste'
            } %}

            {# Bouton suppression (composant showsTable) #}
            {% include 'composants/showsTable/buttons_delete.html.twig' with {
                id: member.id,
                route: 'app_admin_member_delete'
            } %}
        </div>

    </div>
{% endblock %}

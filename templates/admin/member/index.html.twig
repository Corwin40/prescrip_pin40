{% extends 'base.html.twig' %}

{% block title %}Liste des membres{% endblock %}

{% block body %}
    <div class="container mt-5">

        {# Bouton de retour au tableau de bord #}
        <div class="mb-4">
            {% include 'composants/forms/button_return_dashboard.html.twig' %}
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">Liste des membres</h1>

            {% include 'composants/forms/button_creatnew.html.twig' with {
                label: 'Créer un nouveau prescripteur',
                href: path('app_admin_member_new', {'role' : 'prescripteur'})
            } %}

            {% include 'composants/forms/button_creatnew.html.twig' with {
                label: 'Créer un nouveau médiateur',
                href: path('app_admin_member_new', {'role' : 'mediateur'})
            } %}
        </div>

        {# --- Formulaire de recherche --- #}
        <form method="get" action="{{ path('app_admin_member_index') }}" class="mb-3 w-50">
            <div class="input-group">
                <input type="text" name="search" class="form-control"
                       placeholder="Rechercher un email ou une structure"
                       value="{{ app.request.query.get('search') }}">
                <button class="btn btn-primary">Filtrer</button>
            </div>
        </form>

        {% if pagination|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle">
                    <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Rôles</th>
                        <th>Nom de la structure</th>
                        <th>Adresse</th>
                        <th>Code postal</th>
                        <th>Ville</th>
                        <th>Email de contact</th>
                        <th>Téléphone</th>
                        <th>Responsable (Prénom / Nom)</th>
                        <th>Civilité</th>
                        <th>Vérifié</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for member in pagination %}
                        <tr>
                            <td>{{ member.id }}</td>
                            <td>{{ member.email }}</td>
                            <td>{{ member.roles|join(', ') }}</td>
                            <td>{{ member.nameStructure }}</td>
                            <td>{{ member.address }}</td>
                            <td>{{ member.zipcode }}</td>
                            <td>{{ member.city }}</td>
                            <td>{{ member.contactEmail }}</td>
                            <td>{{ member.contactPhone }}</td>
                            <td>{{ member.contactResponsableFirstname }} {{ member.contactResponsableLastname }}</td>
                            <td>{{ member.contactResponsableCivility }}</td>
                            <td>
                                {% if member.isVerified %}
                                    <span class="badge bg-success">Oui</span>
                                {% else %}
                                    <span class="badge bg-danger">Non</span>
                                {% endif %}
                            </td>
                            <td class="text-center">

                                {% include 'composants/forms/button_link.html.twig' with {
                                    label: 'Voir',
                                    href: path('app_admin_member_show', {'id': member.id}),
                                    type: 'info'
                                } %}

                                {% include 'composants/forms/button_link.html.twig' with {
                                    label: 'Modifier',
                                    href: path('app_admin_member_edit', {'id': member.id}),
                                    type: 'warning'
                                } %}

                                {% include 'composants/forms/buttons_delete.html.twig' with {
                                    id: member.id,
                                    route: 'app_admin_member_delete'
                                } %}
                            </td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>

            {# --- Pagination --- #}
            <div class="mt-3">
                {{ knp_pagination_render(pagination) }}
            </div>

        {% else %}
            <p class="text-center">Aucun membre trouvé.</p>
        {% endif %}

    </div>
{% endblock %}

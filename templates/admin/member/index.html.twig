{% extends 'base.html.twig' %}

{% block title %}Liste des membres{% endblock %}

{% block body %}
    <div class="container mt-5">

        {# Bouton de retour au tableau de bord #}
        <div class="mb-4">
            {% include 'composants/forms/button_return_dashboard.html.twig' %}
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">Liste des membres</h1>

            {# Bouton pour créer un membre #}
            {% include 'composants/forms/button_creatnew.html.twig' with {
                label: 'Créer un nouveau membre',
                href: path('app_admin_member_new')
            } %}
        </div>

        {% if members is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle">
                    <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Rôles</th>
                        <th>Nom de la structure</th>
                        <th>Adresse</th>
                        <th>Code postal</th>
                        <th>Ville</th>
                        <th>Email de contact</th>
                        <th>Téléphone</th>
                        <th>Responsable (Prénom / Nom)</th>
                        <th>Civilité</th>
                        <th>Vérifié</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for member in members %}
                        <tr>
                            <td>{{ member.id }}</td>
                            <td>{{ member.email }}</td>
                            <td>
                                {% if member.roles is defined and member.roles is iterable %}
                                    {{ member.roles|join(', ') }}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>{{ member.nameStructure }}</td>
                            <td>{{ member.address }}</td>
                            <td>{{ member.zipcode }}</td>
                            <td>{{ member.city }}</td>
                            <td>{{ member.contactEmail }}</td>
                            <td>{{ member.contactPhone }}</td>
                            <td>{{ member.contactResponsableFirstname }} {{ member.contactResponsableLastname }}</td>
                            <td>{{ member.contactResponsableCivility }}</td>
                            <td>
                                {% if member.isVerified %}
                                    <span class="badge bg-success">Oui</span>
                                {% else %}
                                    <span class="badge bg-danger">Non</span>
                                {% endif %}
                            </td>
                            <td class="text-center">

                                {# Bouton "Voir" #}
                                {% include 'composants/forms/button_link.html.twig' with {
                                    label: 'Voir',
                                    href: path('app_admin_member_show', {'id': member.id}),
                                    type: 'info'
                                } %}

                                {# Bouton "Modifier" #}
                                {% include 'composants/forms/button_link.html.twig' with {
                                    label: 'Modifier',
                                    href: path('app_admin_member_edit', {'id': member.id}),
                                    type: 'warning'
                                } %}

                                {# Bouton "Supprimer" (optionnel, si ton composant existe) #}
                                {% include 'composants/forms/buttons_delete.html.twig' with {
                                    id: member.id,
                                    route: 'app_admin_member_delete'
                                } %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-center">Aucun membre trouvé.</p>
        {% endif %}

    </div>
{% endblock %}

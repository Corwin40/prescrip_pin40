<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Welcome!{% endblock %}</title>

    {# CSS Bootstrap peut rester en CDN (aucun conflit avec Importmap) #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

    {% block stylesheets %}{% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">MonSite</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <!-- Dropdown Login -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Login
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="#">Register</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">Connexion</a>
                            </li>
                        </ul>
                    </li>

                    <!-- Liens simples -->
                    <li class="nav-item">
                        <a class="nav-link" href="#">FABLAB</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Parcours et Formation</a>
                    </li>

                    <!-- Dropdown Services -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Services
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item"
                                   href="https://www.conseiller-numerique.gouv.fr/"
                                   target="_blank" rel="noopener noreferrer">
                                    Conseiller Numérique
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   href="https://www.openpixl.fr/"
                                   target="_blank" rel="noopener noreferrer">
                                    OpenPixl
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   href="https://www.clubmicrosaintpierre.fr/"
                                   target="_blank" rel="noopener noreferrer">
                                    Numerik&Co
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- Lien Wiki -->
                    <li class="nav-item">
                        <a class="nav-link"
                           href="https://wiki.clubmicrosaintpierre.fr/"
                           target="_blank" rel="noopener noreferrer">
                            Wiki
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- CONTENU -->
    <main class="container flex-grow-1 d-flex justify-content-center align-items-center">
        {% block body %}{% endblock %}
    </main>

    <!-- FOOTER -->
    <footer class="container-fluid mt-auto bg-light">
        <div class="row text-center py-3">
            <div class="col">© 2025 - MonSite</div>
            <div class="col">Mentions légales</div>
            <div class="col">Contact</div>
        </div>
    </footer>

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</body>
</html>

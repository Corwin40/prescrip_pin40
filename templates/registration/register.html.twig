{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h1 class="h3 mb-4 text-center">Creer un compte</h1>

                    {% for flash_error in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">
                            {{ flash_error }}
                        </div>
                    {% endfor %}

                    {{ form_start(registrationForm, {'attr': {'class': 'flex-grow-1 d-flex flex-column'}}) }}
                        {{ form_errors(registrationForm) }}

                        <div class="mb-4">
                            {{ form_label(registrationForm.email) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control bg-secondary bg-opacity-10'}}) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(registrationForm.plainPassword) }}
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control bg-secondary bg-opacity-10'}}) }}
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>

                        <div class="form-check form-switch mb-4">
                            {{ form_widget(registrationForm.agreeTerms, {
                                'attr': {
                                    'class': 'form-check-input',
                                    'style': 'accent-color: #198754; transform: scale(1.3);'
                                }
                            }) }}
                            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label ms-2'}}) }}
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>

                        <div class="mb-5">
                            {{ form_label(registrationForm.nameStructure) }}
                            {{ form_widget(registrationForm.nameStructure, {'attr': {'class': 'form-control bg-secondary bg-opacity-10'}}) }}
                            {{ form_errors(registrationForm.nameStructure) }}
                        </div>

                        <div class="mt-auto">
                            <button type="submit" class="btn btn-success btn-lg w-100">Enregistrer</button>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
